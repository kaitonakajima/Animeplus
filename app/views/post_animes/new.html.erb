<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>好きなアニメをレビューしよう</h2>
        <div id="error_explanation">
          <% if @post_anime.errors.any? %>
            <h3>
              <%= @post_anime.errors.count %> errors prohibited this obj<br>from being saved:
            </h3>
            <ul>
              <% @post_anime.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_with model: @post_anime, local:true do |f| %>
          <div class="form-group">
            <%= f.label :title, 'タイトル' %><br>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body, 'レビュー' %><br>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit '投稿する', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

