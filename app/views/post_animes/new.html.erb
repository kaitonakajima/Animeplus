<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>好きなアニメをレビューしよう</h2>
        <%= form_with model: @post_anime, local:true do |f| %>
          <div class="form-group">
            <%= f.label :title, 'タイトル' %><br>
            <%= f.text_field :title, class: "form-control", id: "input01", placeholder: "タイトルを入力してください" %>
          </div>
          <div class="form-group">
            <%= f.label :body, 'レビュー' %><br>
            <%= f.text_area :body, class: "form-control", id: "input02" %>
          </div>
          <div class="form-group">
            <%= f.submit '投稿する', class: "btn btn-success send_btn", id: "sending" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

