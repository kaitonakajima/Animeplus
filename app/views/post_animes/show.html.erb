<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

        <%= render 'users/info', user: @user %>
        
      <div class="col-md-8 offset-md-1">
        <div class="t-head">
          <h2><%= @post_anime.title %></h2>
        </div>
        <table class="show-table">
          <tbody>
            <tr>
              <td width="100">
                <%= link_to user_path(@post_anime.user_id) do %>
                  <%= attachment_image_tag @post_anime.user , :profile_image, :fill, 80, 80, fallback: "default-image.jpg" %></br>
                  <%= @post_anime.user.name %>
                <% end %>
              </td>
              <td>
                <%= @post_anime.body %>
              </td>
              <% if @post_anime.user_id == current_user.id %>
              <td>
                <button class="btn btn-pramary" type="button" data-toggle="modal" data-target="#testModal">
                  <i class="fas fa-ellipsis-v"></i>
                </button>
                <div class="modal fade" id="testModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-body">
                        <%= link_to '編集', edit_post_anime_path(@post_anime.id), class: "btn btn-sm btn-success" %>
                        <%= link_to '削除', post_anime_path(@post_anime.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                      </div>
                    </div>
                  </div>
                </div>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>