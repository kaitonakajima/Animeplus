<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

        <%= render 'users/info', user: @user %>
        
      <div class="col-md-8 offset-md-1">
        <h2><%= @post_anime.title %></h2>
        <table class="table  table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@post_anime.user_id) do %>
                  <%= attachment_image_tag @post_anime.user , :profile_image, :fill, 80, 80, fallback: "default-image.jpg" %></br>
                  <%= @post_anime.user.name %>
                <% end %>
              </td>
              <td>
                <%= @post_anime.body %>
              </td>
              <% if @post_anime.user_id == current_user.id %>
              <td>
                <%= link_to '編集', edit_post_anime_path(@post_anime.id), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to '削除', post_anime_path(@post_anime.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>