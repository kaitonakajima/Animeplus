<div class="col-md-3">
  <table class="table">
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image.jpg" %>
    </tr>
    <tr>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th><%= user.introduction %></th>
    </tr>
  </table>
  <div class="info-btn row">
    <% if @user == current_user %>
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i> プロフィールを編集
      <% end %>
    <% end %>
    <%= link_to new_post_anime_path, class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-solid fa-plus"></i> 投稿する
    <% end %>
  </div>
</div>