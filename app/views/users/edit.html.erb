<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>プロフィールを編集</h2>
        <div id="error_explanation">
          <% if @user.errors.any? %>
            <h3>
              <%= @user.errors.count %> 件のエラーが発生しました
            </h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_with model: @user, url: user_path, local:true do |f| %>
          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.label :image, '画像を追加' %><br>
            <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, '自己紹介' %><br>
            <%= f.text_area :introduction, class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit "完了", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>