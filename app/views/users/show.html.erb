<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <table class="table">
          <tr>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image.jpg" %>
          </tr>
          <tr>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i> プロフィールを編集
          <% end %>
          <%= link_to new_post_anime_path, class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-solid fa-plus"></i> 投稿する
          <% end %>
        </div>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Anime+</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>感想</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</main>